<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="200dp">

            <RelativeLayout
                android:id="@+id/rl_home_left"
                android:layout_height="200dp"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true">

                <com.fionera.cleaner.widget.circleprogress.ArcProgress
                    android:id="@+id/arc_home_storage"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    custom:arc_bottom_text="存储空间"
                    custom:arc_bottom_text_size="18sp"
                    custom:arc_progress="10"
                    custom:arc_stroke_width="8dp"
                    custom:arc_text_color="@color/white"
                    custom:arc_text_size="32sp" />

                <TextView
                    android:id="@+id/capacity"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="20/30"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="55dp" />
            </RelativeLayout>

            <com.fionera.cleaner.widget.circleprogress.ArcProgress
                android:id="@+id/arc_home_process"
                android:layout_width="100dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/rl_home_left"
                android:layout_height="100dp"
                custom:arc_bottom_text="内存"
                android:layout_marginBottom="25dp"
                android:layout_alignParentBottom="true"
                custom:arc_bottom_text_size="14dp"
                custom:arc_progress="10"
                custom:arc_stroke_width="6dp"
                custom:arc_text_color="@color/white"
                custom:arc_text_size="26dp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <include layout="@layout/include_main_card" />
    </RelativeLayout>

</LinearLayout>